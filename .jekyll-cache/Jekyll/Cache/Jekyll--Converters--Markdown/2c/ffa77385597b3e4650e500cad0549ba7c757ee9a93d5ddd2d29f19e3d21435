<span class="kd">function</span> <span class="nx">required</span><span class="p">(</span>
  <span class="nx">target</span><span class="p">:</span> <span class="nb">Object</span><span class="p">,</span>
  <span class="nx">propertyKey</span><span class="p">:</span> <span class="kr">string</span> <span class="o">|</span> <span class="nx">symbol</span><span class="p">,</span>
