      <span class="nx">propertyName</span>
    <span class="p">);</span>
    <span class="k">if</span> <span class="p">(</span><span class="nx">requiredParameters</span><span class="p">)</span> <span class="p">{</span>
      <span class="k">for</span> <span class="p">(</span><span class="kd">let</span> <span class="nx">parameterIndex</span> <span class="k">of</span> <span class="nx">requiredParameters</span><span class="p">)</span> <span class="p">{</span>
        <span class="k">if</span> <span class="p">(</span>
          <span class="nx">parameterIndex</span> <span class="o">&gt;=</span> <span class="nx">arguments</span><span class="p">.</span><span class="nx">length</span> <span class="o">||</span>
          <span class="nx">arguments</span><span class="p">[</span><span class="nx">parameterIndex</span><span class="p">]</span> <span class="o">===</span> <span class="kc">undefined</span>
